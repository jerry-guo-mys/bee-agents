  <script>
    // Elements
    const sidebar = document.getElementById('sidebar');
    const toastContainer = document.getElementById('toastContainer');
    const dragOverlay = document.getElementById('dragOverlay');
    const sessionListEl = document.getElementById('sessionList');
    const sessionSearchEl = document.getElementById('sessionSearch');
    const searchClearBtn = document.getElementById('searchClearBtn');
    const conversationSearch = document.getElementById('conversationSearch');
    const conversationSearchInput = document.getElementById('conversationSearchInput');
    const searchCount = document.getElementById('searchCount');
    const searchPrev = document.getElementById('searchPrev');
    const searchNext = document.getElementById('searchNext');
    const searchClose = document.getElementById('searchClose');
    const messagesEl = document.getElementById('messages');
    const messagesWrapper = messagesEl.parentElement;
    const welcomeEl = document.getElementById('welcome');
    const inputEl = document.getElementById('input');
    const sendBtn = document.getElementById('sendBtn');
    const inputLoadingEl = document.getElementById('inputLoading');
    const inputHintEl = document.getElementById('inputHint');
    const stopBtn = document.getElementById('stopBtn');
    const errorEl = document.getElementById('error');
    const tokenCurrentEl = document.getElementById('tokenCurrent');
    const tokenTotalEl = document.getElementById('tokenTotal');
    const headerTitleEl = document.getElementById('headerTitle');
    const newChatBtn = document.getElementById('newChatBtn');
    const newChatIcon = document.getElementById('newChatIcon');
    const toggleSidebarBtn = document.getElementById('toggleSidebar');
    const modeBtn = document.getElementById('modeBtn');
    const configBtn = document.getElementById('configBtn');
    const configModal = document.getElementById('configModal');
    const configModalClose = document.getElementById('configModalClose');
    const configAssistantList = document.getElementById('configAssistantList');
    const configFontValue = document.getElementById('configFontValue');
    const scrollBottomBtn = document.getElementById('scrollBottom');
    const fileInput = document.getElementById('fileInput');
    const attachBtn = document.getElementById('attachBtn');
    const exportBtn = document.getElementById('exportBtn');
    const importBtn = document.getElementById('importBtn');
    const importFileInput = document.getElementById('importFileInput');
    const connectionStatus = document.getElementById('connectionStatus');
    const imagePreviewModal = document.getElementById('imagePreviewModal');
    const previewImage = document.getElementById('previewImage');

    // State
    const STORAGE_KEY = 'bee_session_id';
    const THEME_KEY = 'bee_theme';
    const COLLAPSE_KEY = 'bee_collapse_thinking';
    const FONT_SIZE_KEY = 'bee_font_size';
    const ASSISTANT_KEY = 'bee_assistant_id';
    const MODEL_KEY = 'bee_model_id';
    let sessionId = localStorage.getItem(STORAGE_KEY) || null;
    let currentAssistantId = localStorage.getItem(ASSISTANT_KEY) || 'default';
    let currentModelId = localStorage.getItem(MODEL_KEY) || 'default';
    let loading = false;
    let abortController = null;
    let collapseThinking = localStorage.getItem(COLLAPSE_KEY) === 'true';

    // Theme management with system preference support
    function getSystemTheme() {
      return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
    }

    function getInitialTheme() {
      const savedTheme = localStorage.getItem(THEME_KEY);
      if (savedTheme && savedTheme !== 'system') {
        return savedTheme;
      }
      return getSystemTheme();
    }

    let currentTheme = getInitialTheme();
    let useSystemTheme = localStorage.getItem(THEME_KEY) === 'system';

    // Initialize theme
    document.documentElement.setAttribute('data-theme', currentTheme);
    if (modeBtn) modeBtn.textContent = useSystemTheme ? '系统' : (currentTheme === 'dark' ? '深色' : '浅色');

    // Listen for system theme changes
    window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
      if (useSystemTheme) {
        const newTheme = e.matches ? 'dark' : 'light';
        document.documentElement.setAttribute('data-theme', newTheme);
        if (modeBtn) modeBtn.textContent = '系统';
        currentTheme = newTheme;
      }
    });

    // Font size management
    let currentFontSize = parseInt(localStorage.getItem(FONT_SIZE_KEY)) || 14;
    function setFontSize(size) {
      currentFontSize = Math.max(12, Math.min(20, size));
      document.documentElement.style.fontSize = currentFontSize + 'px';
      localStorage.setItem(FONT_SIZE_KEY, currentFontSize);
    }
    setFontSize(currentFontSize);

    // Configure marked
    if (typeof marked !== 'undefined') {
      marked.setOptions({
        highlight: function(code, lang) {
          if (typeof hljs === 'undefined') return escapeHtml(code);
          try {
            if (lang && hljs.getLanguage(lang)) return hljs.highlight(code, { language: lang }).value;
            return hljs.highlightAuto(code).value;
          } catch (e) { return escapeHtml(code); }
        },
        breaks: true,
        gfm: true
      });
    }

    function escapeHtml(s) {
      const d = document.createElement('div');
      d.textContent = s;
      return d.innerHTML;
    }

    // Toast notification system
    function showToast(message, type = 'info', duration = 3000) {
      const toast = document.createElement('div');
      toast.className = `toast toast-${type}`;
      const icons = { success: '✓', error: '✕', warning: '⚠', info: 'ℹ' };
      toast.innerHTML = `
        <span class="toast-icon">${icons[type] || icons.info}</span>
        <span>${escapeHtml(message)}</span>
        <button class="toast-close">✕</button>
      `;
      toast.querySelector('.toast-close').onclick = () => hideToast(toast);
      toastContainer.appendChild(toast);
      if (duration > 0) {
        setTimeout(() => hideToast(toast), duration);
      }
      return toast;
    }
    function hideToast(toast) {
      toast.classList.add('hide');
      setTimeout(() => toast.remove(), 300);
    }

    // Connection status management
    let connectionCheckInterval;
    function updateConnectionStatus(status, message) {
      connectionStatus.className = 'connection-status visible ' + status;
      connectionStatus.querySelector('.connection-text').textContent = message;
      if (status === 'online') {
        setTimeout(() => {
          connectionStatus.classList.remove('visible');
        }, 3000);
      }
    }
    async function checkConnection() {
      try {
        const res = await fetch('/api/health', { method: 'HEAD' });
        if (res.ok) {
          updateConnectionStatus('online', '已连接');
        } else {
          updateConnectionStatus('offline', '连接异常');
        }
      } catch (e) {
        updateConnectionStatus('offline', '离线');
      }
    }
    function startConnectionMonitoring() {
      updateConnectionStatus('connecting', '连接中...');
      checkConnection();
      connectionCheckInterval = setInterval(checkConnection, 30000);
    }
    function stopConnectionMonitoring() {
      if (connectionCheckInterval) {
        clearInterval(connectionCheckInterval);
      }
    }
    window.addEventListener('online', () => {
      updateConnectionStatus('connecting', '重新连接...');
      checkConnection();
    });
    window.addEventListener('offline', () => {
      updateConnectionStatus('offline', '网络断开');
    });

    // Image preview modal
    function openImagePreview(src) {
      previewImage.src = src;
      imagePreviewModal.classList.add('active');
    }
    function closeImagePreview() {
      imagePreviewModal.classList.remove('active');
      previewImage.src = '';
    }
    imagePreviewModal.addEventListener('click', (e) => {
      if (e.target === imagePreviewModal || e.target.classList.contains('image-preview-close')) {
        closeImagePreview();
      }
    });
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && imagePreviewModal.classList.contains('active')) {
        closeImagePreview();
      }
    });

    // Drag and drop file upload
    let dragCounter = 0;
    document.addEventListener('dragenter', (e) => {
      e.preventDefault();
      dragCounter++;
      if (e.dataTransfer.types.includes('Files')) {
        dragOverlay.classList.add('active');
      }
    });
    document.addEventListener('dragleave', (e) => {
      e.preventDefault();
      dragCounter--;
      if (dragCounter === 0) {
        dragOverlay.classList.remove('active');
      }
    });
    document.addEventListener('dragover', (e) => {
      e.preventDefault();
    });
    document.addEventListener('drop', (e) => {
      e.preventDefault();
      dragCounter = 0;
      dragOverlay.classList.remove('active');
      const files = Array.from(e.dataTransfer.files);
      if (files.length > 0) {
        handleFiles(files);
      }
    });

    async function handleFiles(files) {
      for (const file of files) {
        if (file.size > 10 * 1024 * 1024) {
          showToast(`文件 ${file.name} 超过 10MB 限制`, 'warning');
          continue;
        }
        try {
          const text = await file.text();
          hideWelcome();
          const row = document.createElement('div');
          row.className = 'msg-row user';
          const avatar = document.createElement('div');
          avatar.className = 'msg-avatar';
          avatar.textContent = '👤';
          row.appendChild(avatar);
          const msg = document.createElement('div');
          msg.className = 'msg user';
          msg.innerHTML = `<div class="file-name">📄 ${escapeHtml(file.name)}</div>`;
          if (text) {
            const preview = document.createElement('div');
            preview.className = 'file-preview';
            preview.textContent = text.slice(0, 500) + (text.length > 500 ? '...' : '');
            msg.appendChild(preview);
          }
          row.appendChild(msg);
          messagesEl.appendChild(row);
          showToast(`已上传: ${file.name}`, 'success');
        } catch (err) {
          showToast(`上传失败: ${file.name}`, 'error');
        }
      }
      messagesWrapper.scrollTop = messagesWrapper.scrollHeight;
    }

    // Paste image upload
    inputEl.addEventListener('paste', (e) => {
      const items = e.clipboardData.items;
      for (const item of items) {
        if (item.type.startsWith('image/')) {
          const file = item.getAsFile();
          if (file) {
            handleFiles([file]);
            showToast('图片已粘贴', 'success');
          }
        }
      }
    });

    function formatTokens(n) {
      if (n >= 1000000) return (n / 1000000).toFixed(1) + 'M';
      if (n >= 1000) return (n / 1000).toFixed(1) + 'K';
      return String(n);
    }

    function updateTokenStats(current, total) {
      tokenCurrentEl.textContent = formatTokens(current);
      tokenTotalEl.textContent = formatTokens(total);
    }

    function showError(msg) {
      errorEl.textContent = msg;
      errorEl.style.display = msg ? 'block' : 'none';
    }

    function saveSessionId(id) {
      sessionId = id;
      localStorage.setItem(STORAGE_KEY, id);
      loadSessionList();
    }

    async function loadAssistants() {
      const sel = document.getElementById('assistantSelect');
      if (!sel) return;
      try {
        const res = await fetch('/api/assistants');
        if (!res.ok) return;
        const assistants = await res.json();
        sel.innerHTML = '';
        assistants.forEach(a => {
          const opt = document.createElement('option');
          opt.value = a.id;
          opt.textContent = a.name;
          if (a.id === currentAssistantId) opt.selected = true;
          sel.appendChild(opt);
        });
        sel.onchange = () => {
          currentAssistantId = sel.value;
          localStorage.setItem(ASSISTANT_KEY, currentAssistantId);
        };
      } catch (e) { console.warn('Load assistants failed:', e); }
    }

    async function loadModels() {
      const sel = document.getElementById('modelSelect');
      if (!sel) return;
      try {
        const res = await fetch('/api/models');
        if (!res.ok) return;
        const models = await res.json();
        sel.innerHTML = '';
        models.forEach(m => {
          const opt = document.createElement('option');
          opt.value = m.id;
          opt.textContent = m.name;
          if (m.id === currentModelId) opt.selected = true;
          sel.appendChild(opt);
        });
        sel.onchange = () => {
          currentModelId = sel.value;
          localStorage.setItem(MODEL_KEY, currentModelId);
        };
      } catch (e) { console.warn('Load models failed:', e); }
    }

    // Session groups: 今天、昨天、上周、更早
    function getSessionGroup(dateStr) {
      if (!dateStr) return 'earlier';
      const today = new Date().toISOString().slice(0, 10);
      const d = new Date(dateStr);
      const dStr = d.toISOString().slice(0, 10);
      const yesterday = new Date(Date.now() - 864e5).toISOString().slice(0, 10);
      const weekAgo = new Date(Date.now() - 7 * 864e5).toISOString().slice(0, 10);
      if (dStr === today) return 'today';
      if (dStr === yesterday) return 'yesterday';
      if (dStr >= weekAgo) return 'this_week';
      return 'earlier';
    }
    const GROUP_LABELS = { today: '今天', yesterday: '昨天', this_week: '上周', earlier: '更早' };

    async function loadSessionList() {
      try {
        const res = await fetch('/api/sessions');
        if (!res.ok) return;
        const sessions = await res.json();
        const q = (sessionSearchEl?.value || '').trim().toLowerCase();
        const filtered = q ? sessions.filter(s =>
          (s.title || '').toLowerCase().includes(q)
        ) : sessions;

        // Update search stats
        updateSearchStats(filtered.length, sessions.length, q);

        // Group by date
        const groups = { today: [], yesterday: [], this_week: [], earlier: [] };
        filtered.forEach(s => {
          const g = getSessionGroup(s.date);
          if (groups[g]) groups[g].push(s);
        });

        sessionListEl.innerHTML = '';

        // Empty state when no sessions at all
        if (filtered.length === 0 && !q) {
          const empty = document.createElement('div');
          empty.className = 'session-list-empty';
          empty.innerHTML = '<span class="icon">💬</span><div>暂无对话</div><div class="hint">点击上方「新对话」开始</div>';
          sessionListEl.appendChild(empty);
          return;
        }

        // Show no results message when search has no matches
        if (filtered.length === 0 && q) {
          const noResults = document.createElement('div');
          noResults.className = 'no-results';
          noResults.innerHTML = `
            <div style="font-size: 2rem; margin-bottom: 8px;">🔍</div>
            <div>未找到 "${escapeHtml(q)}" 相关会话</div>
            <div style="margin-top: 8px; font-size: 0.75rem;">尝试其他关键词</div>
          `;
          sessionListEl.appendChild(noResults);
          return;
        }

        ['today', 'yesterday', 'this_week', 'earlier'].forEach(key => {
          const list = groups[key] || [];
          if (list.length === 0) return;
          const title = document.createElement('div');
          title.className = 'session-group-title';
          title.textContent = GROUP_LABELS[key];
          sessionListEl.appendChild(title);
          list.forEach(s => {
            const div = document.createElement('div');
            div.className = 'session-item' + (s.id === sessionId ? ' active' : '');
            div.dataset.id = s.id;

            // Highlight matching text
            const displayTitle = q ? highlightText(s.title, q) : escapeHtml(s.title);

            div.innerHTML = `
              <div class="session-item-icon">💬</div>
              <div class="session-item-content">
                <div class="title" data-session-id="${s.id}">${displayTitle}</div>
                <div class="meta">
                  <span>${s.message_count} 条</span>
                  <span>${s.updated_at}</span>
                </div>
              </div>
              <button class="delete-btn" data-id="${s.id}" title="删除">✕</button>
            `;
            div.setAttribute('tabindex', '0');
            div.onclick = (e) => {
              if (e.target.classList.contains('delete-btn')) {
                e.stopPropagation();
                deleteSession(e.target.dataset.id);
              } else if (!e.target.classList.contains('session-rename-input')) {
                switchSession(s.id);
              }
            };
            div.addEventListener('keydown', (e) => {
              if (e.key === 'Enter') {
                e.preventDefault();
                switchSession(s.id);
              }
            });
            // Double-click to rename
            const titleEl = div.querySelector('.title');
            titleEl.addEventListener('dblclick', (e) => {
              e.stopPropagation();
              enableSessionRename(s.id, titleEl, s.title);
            });
            sessionListEl.appendChild(div);
          });
        });
      } catch (e) { console.warn('Load sessions failed:', e); }
    }

    function highlightText(text, query) {
      if (!query || !text) return escapeHtml(text);
      const escapedQuery = escapeHtml(query).replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
      const regex = new RegExp(`(${escapedQuery})`, 'gi');
      return escapeHtml(text).replace(regex, '<span class="search-highlight">$1</span>');
    }

    function updateSearchStats(filteredCount, totalCount, query) {
      const statsEl = document.getElementById('searchStats');
      const clearBtn = document.getElementById('searchClearBtn');

      if (!query) {
        statsEl.style.display = 'none';
        clearBtn.classList.remove('visible');
        return;
      }

      statsEl.style.display = 'block';
      clearBtn.classList.add('visible');

      if (filteredCount === 0) {
        statsEl.textContent = `未找到匹配项`;
      } else {
        statsEl.textContent = `找到 ${filteredCount} 个会话 / 共 ${totalCount} 个`;
      }
    }

    function clearSearch() {
      sessionSearchEl.value = '';
      loadSessionList();
      const wrap = document.getElementById('sidebarSearchWrap');
      if (wrap) wrap.style.display = 'none';
    }

    function toggleSearchVisible() {
      const wrap = document.getElementById('sidebarSearchWrap');
      if (!wrap) return;
      const visible = wrap.style.display !== 'none';
      wrap.style.display = visible ? 'none' : 'block';
      if (!visible) {
        sessionSearchEl.focus();
      } else {
        sessionSearchEl.blur();
      }
    }

    function showSearchAndFocus() {
      if (window.innerWidth > 768 && sidebar.classList.contains('collapsed')) {
        sidebar.classList.remove('collapsed');
      }
      const wrap = document.getElementById('sidebarSearchWrap');
      if (wrap) wrap.style.display = 'block';
      setTimeout(() => sessionSearchEl.focus(), 50);
    }

    async function switchSession(id) {
      if (loading) return;
      sessionId = id;
      localStorage.setItem(STORAGE_KEY, id);
      document.querySelectorAll('.session-item').forEach(el => el.classList.remove('active'));
      const item = sessionListEl.querySelector(`[data-id="${id}"]`);
      if (item) item.classList.add('active');
      await loadHistory();
    }

    // Session rename functionality
    function enableSessionRename(id, titleEl, currentTitle) {
      const input = document.createElement('input');
      input.type = 'text';
      input.className = 'session-rename-input';
      input.value = currentTitle;
      titleEl.replaceWith(input);
      input.focus();
      input.select();

      const saveRename = async () => {
        const newTitle = input.value.trim();
        if (newTitle && newTitle !== currentTitle) {
          try {
            const res = await fetch('/api/session/rename', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ session_id: id, title: newTitle })
            });
            if (res.ok) {
              showToast('会话已重命名', 'success');
              loadSessionList();
              if (id === sessionId) {
                headerTitleEl.textContent = newTitle.length > 30 ? newTitle.slice(0, 30) + '...' : newTitle;
              }
            } else {
              throw new Error('Rename failed');
            }
          } catch (e) {
            showToast('重命名失败', 'error');
            loadSessionList();
          }
        } else {
          loadSessionList();
        }
      };

      input.addEventListener('blur', saveRename);
      input.addEventListener('keydown', (e) => {
        if (e.key === 'Enter') {
          e.preventDefault();
          input.blur();
        } else if (e.key === 'Escape') {
          loadSessionList();
        }
      });
    }

    // Keyboard shortcuts modal
    let allTools = [];
    async function populateAssistantList(container) {
      if (!container) return;
      container.innerHTML = '';
      try {
        const [assistantsRes, toolsRes] = await Promise.all([fetch('/api/assistants'), fetch('/api/tools')]);
        if (!assistantsRes.ok) throw new Error('加载助手失败');
        if (!toolsRes.ok) throw new Error('加载工具列表失败');
        const list = await assistantsRes.json();
        allTools = await toolsRes.json();
        list.forEach(a => {
          const el = document.createElement('div');
          el.className = 'skill-item' + (a.id === currentAssistantId ? ' selected' : '');
          el.dataset.id = a.id;
          const canConfig = a.id !== 'auto';
          el.innerHTML = '<div class="skill-item-header">' +
            '<div class="skill-main"><div class="skill-name">' + escapeHtml(a.name) + '</div><div class="skill-desc">' + escapeHtml(a.description || '') + '</div></div>' +
            (canConfig ? '<button class="skill-config-btn" type="button" title="配置技能">⚙ 技能</button>' : '') +
            '</div>';
          el.querySelector('.skill-main').onclick = () => {
            currentAssistantId = a.id;
            localStorage.setItem(ASSISTANT_KEY, a.id);
            container.querySelectorAll('.skill-item').forEach(i => i.classList.remove('selected'));
            el.classList.add('selected');
            const assistantSel = document.getElementById('assistantSelect');
            if (assistantSel) assistantSel.value = a.id;
            closeConfigModal();
            showToast('已选用：' + a.name, 'success');
          };
          if (canConfig) {
            el.querySelector('.skill-config-btn').onclick = (e) => {
              e.stopPropagation();
              toggleSkillConfig(el, a, container);
            };
          }
          container.appendChild(el);
        });
      } catch (e) {
        container.innerHTML = '<p style="color: var(--text-muted); font-size: 0.9rem;">加载失败：' + escapeHtml(e.message) + '</p>';
      }
    }
    function openConfigModal() {
      configModal.classList.add('active');
      populateAssistantList(configAssistantList);
      if (configFontValue) configFontValue.textContent = currentFontSize;
    }
    function closeConfigModal() {
      configModal.classList.remove('active');
    }
    configModal.addEventListener('click', (e) => {
      if (e.target === configModal) closeConfigModal();
    });
    function toggleSkillConfig(itemEl, assistant, container) {
      let panel = itemEl.querySelector('.skill-config-panel');
      if (panel) {
        panel.remove();
        return;
      }
      const currentSkills = new Set(assistant.skills || []);
      panel = document.createElement('div');
      panel.className = 'skill-config-panel';
      let html = '<div class="panel-title">' + escapeHtml(assistant.name) + ' 可用技能</div><div class="tool-checkboxes">';
      const useAll = assistant.skills == null || assistant.skills.length === 0;
      allTools.forEach(t => {
        const checked = useAll || currentSkills.has(t.id);
        html += '<label><input type="checkbox" data-tool="' + escapeHtml(t.id) + '"' + (checked ? ' checked' : '') + '>' + escapeHtml(t.id) + '</label>';
      });
      html += '</div><div class="panel-actions"><button class="btn-save" type="button">保存</button><button class="btn-cancel" type="button">取消</button></div>';
      panel.innerHTML = html;
      panel.querySelector('.btn-save').onclick = async () => {
        const checked = [];
        panel.querySelectorAll('input[type="checkbox"]:checked').forEach(cb => { checked.push(cb.dataset.tool); });
        try {
          const res = await fetch('/api/assistant/' + encodeURIComponent(assistant.id) + '/skills', {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ skills: checked })
          });
          if (!res.ok) throw new Error(await res.text() || res.statusText);
          showToast('已保存技能配置', 'success');
          panel.remove();
          populateAssistantList(container);
        } catch (e) {
          showToast('保存失败：' + (e.message || '未知错误'), 'error');
        }
      };
      panel.querySelector('.btn-cancel').onclick = () => panel.remove();
      itemEl.appendChild(panel);
    }
    // Input draft auto-save
    const DRAFT_KEY = 'bee_input_draft';
    let draftSaveTimeout;
    inputEl.addEventListener('input', () => {
      clearTimeout(draftSaveTimeout);
      draftSaveTimeout = setTimeout(() => {
        if (inputEl.value.trim()) {
          localStorage.setItem(DRAFT_KEY, inputEl.value);
        } else {
          localStorage.removeItem(DRAFT_KEY);
        }
      }, 500);
    });
    // Restore draft on load
    const savedDraft = localStorage.getItem(DRAFT_KEY);
    if (savedDraft) {
      inputEl.value = savedDraft;
      inputEl.style.height = 'auto';
      inputEl.style.height = Math.min(inputEl.scrollHeight, 200) + 'px';
    }
    // Clear draft after sending
    const originalSend = send;
    send = async function() {
      await originalSend();
      localStorage.removeItem(DRAFT_KEY);
    };

    async function deleteSession(id) {
      // Use toast-based confirmation
      const toast = showToast('确定删除这个对话吗？', 'warning', 0);
      const actions = document.createElement('div');
      actions.style.cssText = 'display:flex;gap:8px;margin-left:auto;';
      actions.innerHTML = `
        <button style="padding:4px 12px;border:none;border-radius:4px;background:var(--accent);color:#fff;cursor:pointer;font-size:0.8rem;">删除</button>
        <button style="padding:4px 12px;border:none;border-radius:4px;background:var(--bg-tertiary);color:var(--text-secondary);cursor:pointer;font-size:0.8rem;">取消</button>
      `;
      const confirmBtn = actions.querySelector('button:first-child');
      const cancelBtn = actions.querySelector('button:last-child');
      
      const doDelete = async () => {
        hideToast(toast);
        try {
          await fetch('/api/session/clear', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ session_id: id })
          });
          if (id === sessionId) {
            sessionId = null;
            localStorage.removeItem(STORAGE_KEY);
            messagesEl.innerHTML = '';
            welcomeEl.style.display = 'flex';
            messagesEl.appendChild(welcomeEl);
            headerTitleEl.textContent = '新对话';
          }
          loadSessionList();
          showToast('对话已删除', 'success');
        } catch (e) { 
          console.warn('Delete session failed:', e);
          showToast('删除失败', 'error');
        }
      };
      
      confirmBtn.onclick = doDelete;
      cancelBtn.onclick = () => hideToast(toast);
      
      toast.appendChild(actions);
    }

    // Messages
    function hideWelcome() {
      if (welcomeEl.parentElement === messagesEl) {
        welcomeEl.style.display = 'none';
      }
    }

    // Typing indicator
    let typingIndicatorEl = null;
    function showTypingIndicator() {
      if (typingIndicatorEl) return;
      hideWelcome();
      const row = document.createElement('div');
      row.className = 'msg-row assistant typing-indicator-row';
      row.dataset.role = 'assistant';
      const avatar = document.createElement('div');
      avatar.className = 'msg-avatar';
      avatar.textContent = '🐝';
      row.appendChild(avatar);
      const indicator = document.createElement('div');
      indicator.className = 'typing-indicator';
      indicator.innerHTML = '<span></span><span></span><span></span>';
      row.appendChild(indicator);
      messagesEl.appendChild(row);
      typingIndicatorEl = row;
      smartScroll();
    }
    function hideTypingIndicator() {
      if (typingIndicatorEl) {
        typingIndicatorEl.remove();
        typingIndicatorEl = null;
      }
    }

    function appendMessage(role, content, isMarkdown = false, timestamp = null) {
      hideWelcome();
      // Create row with avatar
      const row = document.createElement('div');
      row.className = 'msg-row ' + role;
      row.dataset.role = role;
      
      const avatar = document.createElement('div');
      avatar.className = 'msg-avatar';
      avatar.textContent = role === 'user' ? '👤' : '🐝';
      row.appendChild(avatar);
      
      const msg = document.createElement('div');
      msg.className = 'msg ' + role;
      msg.dataset.rawContent = content;
      msg.dataset.timestamp = timestamp || new Date().toISOString();
      
      if (role === 'assistant' && isMarkdown) {
        try {
          if (typeof marked !== 'undefined') {
            const contentDiv = document.createElement('div');
            contentDiv.className = 'content';
            contentDiv.innerHTML = marked.parse(content);
            addCopyButtons(contentDiv);
            msg.appendChild(contentDiv);
          } else {
            const plain = document.createElement('div');
            plain.className = 'content plain';
            plain.textContent = content;
            msg.appendChild(plain);
          }
        } catch (err) {
          const plain = document.createElement('div');
          plain.className = 'content plain';
          plain.textContent = content;
          msg.appendChild(plain);
        }
      } else {
        const contentDiv = document.createElement('div');
        contentDiv.className = 'content';
        contentDiv.textContent = content;
        msg.appendChild(contentDiv);
      }
      addMsgCopyIcon(msg, content);
      
      // Add timestamp right after content (inline with text)
      const contentDiv = msg.querySelector('.content');
      const timeEl = document.createElement('span');
      timeEl.className = 'msg-timestamp';
      timeEl.textContent = formatTimestamp(msg.dataset.timestamp);
      let insertTarget = contentDiv;
      const last = contentDiv.lastElementChild;
      if (last && !['PRE', 'CODE'].includes(last.tagName) && last.className !== 'code-block-wrapper') {
        insertTarget = last;
      }
      insertTarget.appendChild(document.createTextNode('\u00A0'));
      insertTarget.appendChild(timeEl);
      
      // Add message actions for assistant messages
      if (role === 'assistant') {
        const actions = document.createElement('div');
        actions.className = 'msg-actions';
        actions.innerHTML = `
          <button class="msg-action-btn" data-action="copy">📋 复制</button>
          <button class="msg-action-btn" data-action="bookmark">🔖 收藏</button>
          <button class="msg-action-btn" data-action="regenerate">🔄 重新生成</button>
        `;
        actions.querySelector('[data-action="copy"]').onclick = () => {
          navigator.clipboard.writeText(content).then(() => {
            showToast('已复制到剪贴板', 'success');
          });
        };
        actions.querySelector('[data-action="bookmark"]').onclick = () => {
          toggleBookmark(row, msg.dataset.timestamp, content);
        };
        actions.querySelector('[data-action="regenerate"]').onclick = () => {
          // Find previous user message and regenerate
          const allRows = Array.from(messagesEl.querySelectorAll('.msg-row'));
          const currentIndex = allRows.indexOf(row);
          let prevUserMsg = null;
          for (let i = currentIndex - 1; i >= 0; i--) {
            if (allRows[i].dataset.role === 'user') {
              prevUserMsg = allRows[i].querySelector('.msg').dataset.rawContent;
              break;
            }
          }
          if (prevUserMsg) {
            // Remove current assistant message and regenerate
            row.remove();
            inputEl.value = prevUserMsg;
            send();
          }
        };
        msg.appendChild(actions);
      }
      
      // Add message actions for user messages (edit, delete)
      if (role === 'user') {
        const actions = document.createElement('div');
        actions.className = 'msg-actions';
        actions.innerHTML = `
          <button class="msg-action-btn" data-action="edit">✏️ 编辑</button>
          <button class="msg-action-btn" data-action="delete">🗑️ 删除</button>
        `;
        
        // Edit functionality
        actions.querySelector('[data-action="edit"]').onclick = () => {
          const newContent = prompt('编辑消息:', content);
          if (newContent !== null && newContent.trim() !== '' && newContent !== content) {
            // Update the message content
            msg.dataset.rawContent = newContent;
            msg.querySelector('.content').textContent = newContent;
            showToast('消息已编辑', 'success');
            // TODO: Send edit to backend if needed
          }
        };
        
        // Delete functionality
        actions.querySelector('[data-action="delete"]').onclick = () => {
          const toast = showToast('确定删除此消息？', 'warning', 0);
          const confirmBtn = document.createElement('button');
          confirmBtn.textContent = '删除';
          confirmBtn.style.cssText = 'margin-left:8px;padding:4px 12px;border:none;border-radius:4px;background:var(--accent);color:#fff;cursor:pointer;font-size:0.8rem;';
          confirmBtn.onclick = () => {
            row.remove();
            hideToast(toast);
            showToast('消息已删除', 'success');
          };
          const cancelBtn = document.createElement('button');
          cancelBtn.textContent = '取消';
          cancelBtn.style.cssText = 'margin-left:8px;padding:4px 12px;border:none;border-radius:4px;background:var(--bg-tertiary);color:var(--text-secondary);cursor:pointer;font-size:0.8rem;';
          cancelBtn.onclick = () => hideToast(toast);
          toast.appendChild(confirmBtn);
          toast.appendChild(cancelBtn);
        };
        
        msg.appendChild(actions);
      }
      
      row.appendChild(msg);
      messagesEl.appendChild(row);
      smartScroll();
      return msg;
    }
    
    function formatTimestamp(isoString) {
      const date = new Date(isoString);
      const now = new Date();
      const isToday = date.toDateString() === now.toDateString();
      const time = date.toLocaleTimeString('zh-CN', { hour: '2-digit', minute: '2-digit' });
      if (isToday) {
        return time;
      }
      return date.toLocaleDateString('zh-CN', { month: 'short', day: 'numeric' }) + ' ' + time;
    }

    function addCopyButtons(contentDiv) {
      contentDiv.querySelectorAll('pre code').forEach(block => {
        const pre = block.parentElement;
        const codeText = block.textContent;
        const lines = codeText.split('\n');
        const lang = block.className.replace('hljs', '').replace('language-', '').trim() || 'text';
        
        // Create enhanced code block wrapper
        const wrapper = document.createElement('div');
        wrapper.className = 'code-block-wrapper';
        
        // Header with language and actions
        const header = document.createElement('div');
        header.className = 'code-block-header';
        header.innerHTML = `
          <span class="code-block-lang">${escapeHtml(lang)}</span>
          <div class="code-block-actions">
            <button class="code-block-btn copy-code-btn">📋 复制</button>
          </div>
        `;
        
        // Copy button functionality
        header.querySelector('.copy-code-btn').onclick = () => {
          navigator.clipboard.writeText(codeText).then(() => {
            showToast('代码已复制', 'success');
          });
        };
        
        // Content with line numbers
        const content = document.createElement('div');
        content.className = 'code-block-content';
        
        // Line numbers
        const lineNumbers = document.createElement('div');
        lineNumbers.className = 'line-numbers';
        lineNumbers.innerHTML = lines.map((_, i) => `<span>${i + 1}</span>`).join('');
        
        // Code container
        const codeContainer = document.createElement('div');
        codeContainer.className = 'code-with-lines';
        codeContainer.appendChild(block.cloneNode(true));
        
        content.appendChild(lineNumbers);
        content.appendChild(codeContainer);
        
        wrapper.appendChild(header);
        wrapper.appendChild(content);
        
        // Replace original pre with enhanced wrapper
        pre.parentNode.replaceChild(wrapper, pre);
      });
      
      // Add click handlers for images
      contentDiv.querySelectorAll('img').forEach(img => {
        img.style.cursor = 'zoom-in';
        img.onclick = () => openImagePreview(img.src);
      });
    }

    function addMsgCopyIcon(msg, rawText) {
      const icon = document.createElement('button');
      icon.className = 'msg-copy-icon';
      icon.innerHTML = '📋';
      icon.title = '复制';
      icon.onclick = () => {
        navigator.clipboard.writeText(rawText).then(() => {
          icon.innerHTML = '✓';
          icon.classList.add('copied');
          setTimeout(() => { icon.innerHTML = '📋'; icon.classList.remove('copied'); }, 1500);
        });
      };
      msg.insertBefore(icon, msg.firstChild);
    }

    // 步骤+回复合并为一篇文章块 response-article
    function ensureResponseArticle() {
      let article = document.getElementById('response-article');
      if (!article) {
        article = document.createElement('div');
        article.id = 'response-article';
        article.className = 'response-article' + (collapseThinking ? ' steps-collapsed' : '');
        article.innerHTML = '<div class="response-steps-bar" role="button" tabindex="0"><div class="response-steps-bar-left"><span class="thinking-label">' + (collapseThinking ? '显示步骤' : 'Bee 思考完成') + '</span><span class="thinking-duration"></span></div><span class="thinking-arrow">›</span></div><div class="response-steps"></div><div class="response-content"></div>';
        const stepsBarEl = article.querySelector('.response-steps-bar');
        stepsBarEl.onclick = () => {
          article.classList.toggle('steps-collapsed');
          collapseThinking = article.classList.contains('steps-collapsed');
          localStorage.setItem(COLLAPSE_KEY, collapseThinking);
          updateThinkingBoxLabel(article);
        };
        stepsBarEl.onkeydown = (e) => { if (e.key === 'Enter' || e.key === ' ') { e.preventDefault(); stepsBarEl.click(); } };
        messagesEl.appendChild(article);
      }
      return article;
    }

    function ensureThinkingBox() {
      return ensureResponseArticle();
    }

    function updateThinkingBoxLabel(box) {
      if (!box) box = document.getElementById('response-article');
      if (!box) return;
      const label = box.querySelector('.thinking-label');
      if (label) label.textContent = box.classList.contains('steps-collapsed') ? '显示步骤' : 'Bee 思考完成';
    }

    function updateThinkingBoxDuration(seconds) {
      const box = document.getElementById('response-article');
      if (!box) return;
      const dur = box.querySelector('.thinking-duration');
      if (dur) dur.textContent = seconds != null ? seconds + '秒' : '';
      updateThinkingBoxLabel(box);
    }

    function addThinkingStep(type, text, tool, preview) {
      const article = ensureThinkingBox();
      const steps = article.querySelector('.response-steps');
      const step = document.createElement('div');
      step.className = 'step';

      const header = document.createElement('div');
      header.className = 'step-header';
      const summary = document.createElement('span');
      summary.className = 'step-summary';
      const toggleSpan = document.createElement('span');
      toggleSpan.className = 'step-toggle';
      toggleSpan.textContent = '▼';

      const body = document.createElement('div');
      body.className = 'step-body';

      if (type === 'thinking') {
        summary.textContent = '思考中…';
      } else if (type === 'thinking_content') {
        summary.innerHTML = '<strong>Plan / 推理</strong>';
        const pre = document.createElement('pre');
        pre.className = 'plan-preview';
        pre.textContent = text || '';
        body.appendChild(pre);
      } else if (type === 'memory_recovery') {
        summary.innerHTML = '<strong>📚 使用长期记忆</strong>';
        const span = document.createElement('span');
        span.className = 'preview';
        span.textContent = preview || '';
        body.appendChild(span);
      } else if (type === 'memory_consolidation') {
        summary.innerHTML = '<strong>💾 整理到长期记忆</strong>';
        const span = document.createElement('span');
        span.className = 'preview';
        span.textContent = preview || '';
        body.appendChild(span);
      } else if (type === 'tool_call') {
        summary.innerHTML = '🔧 调用工具 <span class="tool"></span>';
        summary.querySelector('.tool').textContent = tool || '';
      } else if (type === 'observation') {
        summary.innerHTML = '👁️ 观察 <span class="tool"></span>';
        summary.querySelector('.tool').textContent = tool || '';
        const span = document.createElement('span');
        span.className = 'preview';
        span.textContent = preview || '';
        body.appendChild(span);
      } else if (type === 'tool_failure') {
        summary.innerHTML = '<strong style="color:var(--accent);">⚠️ 工具失败</strong> <span class="tool"></span>';
        summary.querySelector('.tool').textContent = tool || '';
      } else if (type === 'recovery') {
        summary.innerHTML = '<strong style="color:var(--warning);">🔄 错误恢复</strong>';
        const span = document.createElement('span');
        span.className = 'preview';
        span.textContent = preview || '';
        body.appendChild(span);
      } else {
        summary.textContent = text || type;
      }

      header.appendChild(summary);
      header.appendChild(toggleSpan);
      header.onclick = () => step.classList.toggle('collapsed');

      step.appendChild(header);
      step.appendChild(body);
      steps.appendChild(step);
      messagesWrapper.scrollTop = messagesWrapper.scrollHeight;
    }

    function removeThinkingBox() {
      const box = document.getElementById('response-article');
      if (box) box.remove();
    }

    // Load history
    async function loadHistory() {
      if (!sessionId) return;
      try {
        const res = await fetch('/api/history?session_id=' + encodeURIComponent(sessionId));
        if (!res.ok) return;
        const data = await res.json();
        messagesEl.innerHTML = '';
        if (!data.messages || data.messages.length === 0) {
          welcomeEl.style.display = 'flex';
          messagesEl.appendChild(welcomeEl);
          headerTitleEl.textContent = '新对话';
          return;
        }
        welcomeEl.style.display = 'none';
        data.messages.forEach(m => {
          const content = (m.content || '').trim();
          if (m.role === 'assistant' && (content.startsWith('Tool call:') || content.startsWith('Observation from '))) return;
          if (m.role === 'user' && content.startsWith('Observation from ')) return;
          appendMessage(m.role, m.content || '', m.role === 'assistant');
        });
        // Update header title
        const firstUser = data.messages.find(m => m.role === 'user' && !m.content.startsWith('Observation from '));
        if (firstUser) {
          const t = firstUser.content.trim();
          headerTitleEl.textContent = t.length > 30 ? t.slice(0, 30) + '...' : t;
        }
      } catch (e) { console.warn('Load history failed:', e); }
    }

    // Send message
    async function send() {
      const text = inputEl.value.trim();
      if (!text || loading) return;
      inputEl.value = '';
      showError('');
      hideWelcome();
      appendMessage('user', text, false);
      headerTitleEl.textContent = text.length > 30 ? text.slice(0, 30) + '...' : text;
      
      inputEl.disabled = true;
      if (sendBtn) sendBtn.disabled = true;
      inputLoadingEl.style.display = 'block';
      stopBtn.style.display = 'inline-block';
      if (inputHintEl) inputHintEl.textContent = '复杂任务可能需要数分钟，请耐心等待';
      loading = true;
      abortController = new AbortController();

      // Show typing indicator
      showTypingIndicator();
      var abortedByTimeout = false;

      // 空闲超时：仅当「连续一段时间未收到任何流数据」时判定超时，收到任意事件则重置
      const IDLE_TIMEOUT_MS = 180000;  // 3 分钟无数据则超时
      let timeoutId = null;
      function resetIdleTimeout() {
        if (timeoutId) clearTimeout(timeoutId);
        timeoutId = setTimeout(function() {
          if (loading && abortController) {
            abortedByTimeout = true;
            abortController.abort();
          }
        }, IDLE_TIMEOUT_MS);
      }
      resetIdleTimeout();

      let assistantBubble = null;
      let contentEl = null;
      let pendingBuffer = '';
      let streamDone = false;
      let typingId = null;
      let thinkingStartTime = null;
      const TYPING_MS = 20;
      const CHARS_PER_TICK = 2;

      function startTypingLoop() {
        if (typingId) return;
        function tick() {
          if (!contentEl) return;
          if (pendingBuffer.length > 0) {
            const take = Math.min(CHARS_PER_TICK, pendingBuffer.length);
            contentEl.textContent += pendingBuffer.slice(0, take);
            pendingBuffer = pendingBuffer.slice(take);
            messagesWrapper.scrollTop = messagesWrapper.scrollHeight;
          }
          if (pendingBuffer.length > 0 || !streamDone) {
            typingId = setTimeout(tick, TYPING_MS);
          } else {
            typingId = null;
            if (assistantBubble && contentEl) {
              const rawText = contentEl.textContent || '';
              if (rawText && typeof marked !== 'undefined') {
                try {
                  const contentDiv = document.createElement('div');
                  contentDiv.className = 'content';
                  contentDiv.innerHTML = marked.parse(rawText);
                  addCopyButtons(contentDiv);
                  contentEl.replaceWith(contentDiv);
                } catch (e) { console.warn('Markdown parse error:', e); }
              }
              if (rawText) addMsgCopyIcon(assistantBubble, rawText);
            }
            loadSessionList();
          }
        }
        typingId = setTimeout(tick, TYPING_MS);
      }

      removeThinkingBox();

      try {
        const res = await fetch('/api/chat/stream', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ message: text, session_id: sessionId || undefined, assistant_id: currentAssistantId, model_id: currentModelId === 'default' ? undefined : currentModelId }),
          signal: abortController.signal
        });
        if (!res.ok) throw new Error(await res.text() || res.statusText);

        const reader = res.body.getReader();
        const decoder = new TextDecoder();
        let buffer = '';

        while (true) {
          const { value, done } = await reader.read();
          if (done) break;
          resetIdleTimeout();
          buffer += decoder.decode(value, { stream: true });
          const lines = buffer.split('\n');
          buffer = lines.pop() || '';

          for (const line of lines) {
            if (!line.trim()) continue;
            try {
              const ev = JSON.parse(line);
              resetIdleTimeout();
              if (ev.type === 'session_id') { saveSessionId(ev.session_id); continue; }
              if (ev.type === 'assistant_dispatched') { showToast('已自动分派至：' + (ev.assistant_name || ev.assistant_id), 'info'); continue; }
              if (ev.type === 'thinking') { if (thinkingStartTime == null) thinkingStartTime = Date.now(); addThinkingStep('thinking'); continue; }
              if (ev.type === 'thinking_content') { if (thinkingStartTime == null) thinkingStartTime = Date.now(); addThinkingStep('thinking_content', ev.text); continue; }
              if (ev.type === 'memory_recovery') { if (thinkingStartTime == null) thinkingStartTime = Date.now(); addThinkingStep('memory_recovery', null, null, ev.preview); continue; }
              if (ev.type === 'memory_consolidation') { if (thinkingStartTime == null) thinkingStartTime = Date.now(); addThinkingStep('memory_consolidation', null, null, ev.preview); continue; }
              if (ev.type === 'tool_call') { if (thinkingStartTime == null) thinkingStartTime = Date.now(); addThinkingStep('tool_call', null, ev.tool); continue; }
              if (ev.type === 'observation') { if (thinkingStartTime == null) thinkingStartTime = Date.now(); addThinkingStep('observation', null, ev.tool, ev.preview); continue; }
              if (ev.type === 'tool_failure') { if (thinkingStartTime == null) thinkingStartTime = Date.now(); addThinkingStep('tool_failure', ev.reason, ev.tool); continue; }
              if (ev.type === 'recovery') { if (thinkingStartTime == null) thinkingStartTime = Date.now(); addThinkingStep('recovery', ev.detail); continue; }
              if (ev.type === 'message_chunk') {
                // Hide typing indicator when first chunk arrives
                hideTypingIndicator();
                if (!assistantBubble) {
                  let article = document.getElementById('response-article');
                  if (!article) {
                    article = document.createElement('div');
                    article.id = 'response-article';
                    article.className = 'response-article steps-collapsed';
                    article.innerHTML = '<div class="response-steps-bar" style="display:none"></div><div class="response-steps"></div><div class="response-content"></div>';
                    messagesEl.appendChild(article);
                  }
                  const contentWrap = article.querySelector('.response-content');
                  const row = document.createElement('div');
                  row.className = 'msg-row assistant';
                  const avatar = document.createElement('div');
                  avatar.className = 'msg-avatar';
                  avatar.textContent = '🐝';
                  row.appendChild(avatar);
                  assistantBubble = document.createElement('div');
                  assistantBubble.className = 'msg assistant';
                  contentEl = document.createElement('span');
                  contentEl.className = 'content streaming';
                  assistantBubble.appendChild(contentEl);
                  row.appendChild(assistantBubble);
                  contentWrap.appendChild(row);
                  startTypingLoop();
                }
                pendingBuffer += ev.text || '';
                continue;
              }
              if (ev.type === 'message_done') {
                streamDone = true;
                if (thinkingStartTime != null) {
                  const sec = Math.round((Date.now() - thinkingStartTime) / 1000);
                  updateThinkingBoxDuration(sec);
                }
                continue;
              }
              if (ev.type === 'token_usage') { updateTokenStats(ev.total_tokens || 0, ev.cumulative_total || 0); continue; }
              if (ev.type === 'error') { showError(ev.text || '错误'); }
            } catch (err) { console.warn('Parse error:', err); }
          }
        }

        // 若没有收到 message_chunk（无回复），或打字未启动，则直接 finalize
        if (assistantBubble && contentEl && !typingId) {
          streamDone = true;
          if (pendingBuffer) {
            contentEl.textContent = pendingBuffer;
            pendingBuffer = '';
          }
          const rawText = contentEl.textContent || '';
          if (rawText && typeof marked !== 'undefined') {
            try {
              const contentDiv = document.createElement('div');
              contentDiv.className = 'content';
              contentDiv.innerHTML = marked.parse(rawText);
              addCopyButtons(contentDiv);
              contentEl.replaceWith(contentDiv);
            } catch (e) { console.warn('Markdown parse error:', e); }
          }
          addMsgCopyIcon(assistantBubble, rawText);
        }
        if (!typingId) {
          loadSessionList();
        }
      } catch (e) {
        hideTypingIndicator();
        if (typingId) { clearTimeout(typingId); typingId = null; }
        if (e.name === 'AbortError') {
          showError(abortedByTimeout ? '请求超时，请重试' : '已停止生成');
        } else if (e.name === 'TimeoutError' || (e.message && e.message.includes('timeout'))) {
          showError('请求超时，请重试');
        } else {
          showError('请求失败: ' + (e.message || '未知错误'));
        }
        removeThinkingBox();
      } finally {
        hideTypingIndicator();
        if (timeoutId) clearTimeout(timeoutId);
        inputEl.disabled = false;
        if (sendBtn) sendBtn.disabled = false;
        inputLoadingEl.style.display = 'none';
        stopBtn.style.display = 'none';
        if (inputHintEl) inputHintEl.textContent = 'Shift+Enter 换行';
        loading = false;
        abortController = null;
      }
    }

    function stopGeneration() {
      if (abortController) abortController.abort();
    }

    async function newChat() {
      if (loading) {
        if (!confirm('正在生成回复，确定开始新对话吗？')) return;
        stopGeneration();
      }
      // 仅切换为空会话并清空界面，不删除当前会话（历史对话保留在侧栏，可点击切换回来）
      sessionId = null;
      localStorage.removeItem(STORAGE_KEY);
      messagesEl.innerHTML = '';
      welcomeEl.style.display = 'flex';
      messagesEl.appendChild(welcomeEl);
      headerTitleEl.textContent = '新对话';
      updateTokenStats(0, 0);
      inputEl.focus();
      loadSessionList();
    }

    function toggleTheme() {
      // Cycle: dark -> light -> system -> dark
      if (currentTheme === 'dark' && !useSystemTheme) {
        currentTheme = 'light';
        useSystemTheme = false;
        localStorage.setItem(THEME_KEY, 'light');
        showToast('已切换至浅色模式', 'success', 1500);
      } else if (currentTheme === 'light' && !useSystemTheme) {
        useSystemTheme = true;
        currentTheme = getSystemTheme();
        localStorage.setItem(THEME_KEY, 'system');
        showToast('已跟随系统主题', 'success', 1500);
      } else {
        currentTheme = 'dark';
        useSystemTheme = false;
        localStorage.setItem(THEME_KEY, 'dark');
        showToast('已切换至深色模式', 'success', 1500);
      }
      document.documentElement.setAttribute('data-theme', currentTheme);
      if (modeBtn) modeBtn.textContent = useSystemTheme ? '系统' : (currentTheme === 'dark' ? '深色' : '浅色');
    }

    function toggleSidebar() {
      sidebar.classList.toggle('collapsed');
      if (window.innerWidth <= 768) {
        sidebar.classList.toggle('open');
      }
    }

    // Smooth scroll to bottom
    function smoothScrollToBottom() {
      messagesWrapper.scrollTo({
        top: messagesWrapper.scrollHeight,
        behavior: 'smooth'
      });
    }

    // Scroll to bottom button
    function updateScrollButton() {
      const { scrollTop, scrollHeight, clientHeight } = messagesWrapper;
      const isNearBottom = scrollHeight - scrollTop - clientHeight < 150;
      scrollBottomBtn.classList.toggle('visible', !isNearBottom && messagesEl.children.length > 1);
    }
    scrollBottomBtn.onclick = smoothScrollToBottom;
    messagesWrapper.onscroll = updateScrollButton;

    // Smart auto-scroll - only if user was already near bottom
    let userWasNearBottom = true;
    messagesWrapper.addEventListener('scroll', () => {
      const { scrollTop, scrollHeight, clientHeight } = messagesWrapper;
      userWasNearBottom = scrollHeight - scrollTop - clientHeight < 200;
    });
    function smartScroll() {
      if (userWasNearBottom) {
        smoothScrollToBottom();
      }
    }

    // Mobile keyboard handling
    if (visualViewport) {
      visualViewport.addEventListener('resize', () => {
        if (visualViewport.height < window.innerHeight * 0.8) {
          document.body.style.height = visualViewport.height + 'px';
          messagesWrapper.scrollTop = messagesWrapper.scrollHeight;
        } else {
          document.body.style.height = '';
        }
      });
    }

    // Touch gestures for mobile
    let touchStartX = 0;
    let touchStartY = 0;
    let touchStartTime = 0;
    const SWIPE_THRESHOLD = 80;
    const SWIPE_TIME_THRESHOLD = 300;

    document.addEventListener('touchstart', (e) => {
      touchStartX = e.touches[0].clientX;
      touchStartY = e.touches[0].clientY;
      touchStartTime = Date.now();
    }, { passive: true });

    document.addEventListener('touchend', (e) => {
      const touchEndX = e.changedTouches[0].clientX;
      const touchEndY = e.changedTouches[0].clientY;
      const touchDuration = Date.now() - touchStartTime;
      const deltaX = touchEndX - touchStartX;
      const deltaY = touchEndY - touchStartY;

      // Only handle horizontal swipes
      if (Math.abs(deltaX) > Math.abs(deltaY) && Math.abs(deltaX) > SWIPE_THRESHOLD && touchDuration < SWIPE_TIME_THRESHOLD) {
        // Swipe right to open sidebar (from left edge)
        if (deltaX > 0 && touchStartX < 50) {
          sidebar.classList.add('open');
        }
        // Swipe left to close sidebar
        else if (deltaX < 0 && sidebar.classList.contains('open')) {
          sidebar.classList.remove('open');
        }
      }
    }, { passive: true });

    // Pull to refresh (only when at top of messages)
    let pullStartY = 0;
    let isPulling = false;
    messagesWrapper.addEventListener('touchstart', (e) => {
      if (messagesWrapper.scrollTop === 0) {
        pullStartY = e.touches[0].clientY;
        isPulling = true;
      }
    }, { passive: true });

    messagesWrapper.addEventListener('touchmove', (e) => {
      if (!isPulling) return;
      const pullDistance = e.touches[0].clientY - pullStartY;
      if (pullDistance > 100 && pullDistance < 150) {
        // Visual feedback for pull to refresh
        if (!document.querySelector('.pull-indicator')) {
          const indicator = document.createElement('div');
          indicator.className = 'pull-indicator';
          indicator.innerHTML = '<span>↓ 下拉刷新</span>';
          messagesWrapper.prepend(indicator);
        }
      }
    }, { passive: true });

    messagesWrapper.addEventListener('touchend', (e) => {
      if (!isPulling) return;
      const pullDistance = e.changedTouches[0].clientY - pullStartY;
      const indicator = document.querySelector('.pull-indicator');

      if (pullDistance > 150) {
        // Trigger refresh
        if (indicator) {
          indicator.innerHTML = '<span class="thinking-dots"><span></span><span></span><span></span></span>';
        }
        loadSessionList();
        if (sessionId) loadHistory();
        setTimeout(() => {
          indicator?.remove();
        }, 500);
      } else {
        indicator?.remove();
      }
      isPulling = false;
    }, { passive: true });

    // Event listeners
    stopBtn.onclick = () => { if (loading) stopGeneration(); };
    if (sendBtn) sendBtn.onclick = () => { if (!loading) send(); };
    newChatBtn.onclick = newChat;
    newChatBtn.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' || e.key === ' ') { e.preventDefault(); newChat(); }
    });
    if (newChatIcon) newChatIcon.onclick = newChat;
    if (toggleSidebarBtn) toggleSidebarBtn.onclick = toggleSidebar;
    const sidebarToggleBtn = document.getElementById('sidebarToggleBtn');
    const sidebarNewChatBtn = document.getElementById('sidebarNewChatBtn');
    const sidebarConfigBtn = document.getElementById('sidebarConfigBtn');
    if (sidebarToggleBtn) sidebarToggleBtn.onclick = toggleSidebar;
    const sidebarHeaderToggle = document.getElementById('sidebarHeaderToggle');
    if (sidebarHeaderToggle) sidebarHeaderToggle.onclick = toggleSidebar;
    if (sidebarNewChatBtn) sidebarNewChatBtn.onclick = newChat;
    if (sidebarConfigBtn) sidebarConfigBtn.onclick = openConfigModal;
    if (modeBtn) modeBtn.onclick = toggleTheme;
    sessionSearchEl.oninput = loadSessionList;
    searchClearBtn.onclick = clearSearch;
    const sidebarSearchBtn = document.getElementById('sidebarSearchBtn');
    if (sidebarSearchBtn) sidebarSearchBtn.onclick = toggleSearchVisible;

    // Keyboard navigation for session list
    let focusedSessionIndex = -1;
    sessionSearchEl.addEventListener('keydown', (e) => {
      const sessionItems = sessionListEl.querySelectorAll('.session-item');
      if (sessionItems.length === 0) return;

      if (e.key === 'ArrowDown') {
        e.preventDefault();
        focusedSessionIndex = Math.min(focusedSessionIndex + 1, sessionItems.length - 1);
        sessionItems[focusedSessionIndex]?.focus();
        sessionItems[focusedSessionIndex]?.scrollIntoView({ block: 'nearest' });
      } else if (e.key === 'ArrowUp') {
        e.preventDefault();
        focusedSessionIndex = Math.max(focusedSessionIndex - 1, 0);
        sessionItems[focusedSessionIndex]?.focus();
        sessionItems[focusedSessionIndex]?.scrollIntoView({ block: 'nearest' });
      } else if (e.key === 'Enter' && focusedSessionIndex >= 0) {
        e.preventDefault();
        sessionItems[focusedSessionIndex]?.click();
        inputEl.focus();
      }
    });

    // Reset focused index when search changes
    sessionSearchEl.addEventListener('input', () => {
      focusedSessionIndex = -1;
    });
    if (configBtn) configBtn.onclick = openConfigModal;
    if (configModalClose) configModalClose.onclick = closeConfigModal;
    exportBtn.onclick = exportConversation;
    importBtn.onclick = importConversation;
    importFileInput.onchange = async () => {
      const file = importFileInput.files[0];
      if (!file) return;
      await handleImportFile(file);
      importFileInput.value = '';
    };
    
    // Keyboard shortcuts
    document.onkeydown = (e) => {
      // Don't trigger shortcuts when typing in input
      if (e.target.tagName === 'INPUT' || e.target.tagName === 'TEXTAREA') {
        // ? key: Show shortcuts modal (even in input, but check if shift is pressed for ?)
        if (e.key === '?' && !e.ctrlKey && !e.metaKey) {
          e.preventDefault();
          openConfigModal();
          return;
        }
        return;
      }
      // ? key: Show config modal
      if (e.key === '?') {
        e.preventDefault();
        openConfigModal();
        return;
      }
      // Ctrl/Cmd + K: Show and focus search
      if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
        e.preventDefault();
        showSearchAndFocus();
      }
      // Ctrl/Cmd + L: Clear current session
      if ((e.ctrlKey || e.metaKey) && e.key === 'l') {
        e.preventDefault();
        if (!loading && sessionId) newChat();
      }
      // Ctrl/Cmd + /: Show config
      if ((e.ctrlKey || e.metaKey) && e.key === '/') {
        e.preventDefault();
        openConfigModal();
      }
      // Escape: Close sidebar on mobile / blur input / close modal / close conversation search
      if (e.key === 'Escape') {
        if (conversationSearch.classList.contains('active')) {
          closeConversationSearch();
          return;
        }
        if (configModal && configModal.classList.contains('active')) {
          closeConfigModal();
          return;
        }
        if (document.activeElement === sessionSearchEl) {
          const wrap = document.getElementById('sidebarSearchWrap');
          if (wrap) wrap.style.display = 'none';
          sessionSearchEl.blur();
          return;
        }
        if (window.innerWidth <= 768 && sidebar.classList.contains('open')) {
          sidebar.classList.remove('open');
        } else {
          inputEl.blur();
          sessionSearchEl.blur();
        }
      }
      // Ctrl/Cmd + F: Open conversation search
      if ((e.ctrlKey || e.metaKey) && e.key === 'f') {
        e.preventDefault();
        openConversationSearch();
      }
      // / key: Focus input
      if (e.key === '/' && !e.ctrlKey && !e.metaKey) {
        e.preventDefault();
        inputEl.focus();
      }
    };
    
    inputEl.onkeydown = (e) => {
      if (e.key === 'Enter' && !e.shiftKey) {
        e.preventDefault();
        if (!loading) send();
      }
    };

    // Character counter
    const MAX_CHARS = 4000;
    const charCounter = document.getElementById('charCounter');

    function updateCharCounter() {
      const length = inputEl.value.length;
      if (length === 0) {
        charCounter.style.display = 'none';
        return;
      }
      charCounter.style.display = 'inline';
      charCounter.textContent = `${length} / ${MAX_CHARS}`;

      // Update color based on length
      charCounter.classList.remove('warning', 'danger');
      if (length > MAX_CHARS * 0.9) {
        charCounter.classList.add('danger');
      } else if (length > MAX_CHARS * 0.8) {
        charCounter.classList.add('warning');
      }

      // Warn when approaching limit
      if (length >= MAX_CHARS) {
        showToast('已达到最大字符限制', 'warning', 2000);
      }
    }

    inputEl.oninput = () => {
      inputEl.style.height = 'auto';
      inputEl.style.height = Math.min(inputEl.scrollHeight, 200) + 'px';
      updateCharCounter();
    };

    // Font size in config modal
    const configFontDown = document.getElementById('configFontDown');
    const configFontUp = document.getElementById('configFontUp');
    if (configFontDown) configFontDown.onclick = () => {
      const sizes = [12, 14, 16, 18, 20];
      const idx = Math.max(0, sizes.indexOf(currentFontSize) - 1);
      setFontSize(sizes[idx]);
      if (configFontValue) configFontValue.textContent = currentFontSize;
      showToast(`字体: ${currentFontSize}px`, 'success', 1200);
    };
    if (configFontUp) configFontUp.onclick = () => {
      const sizes = [12, 14, 16, 18, 20];
      const idx = Math.min(sizes.length - 1, sizes.indexOf(currentFontSize) + 1);
      setFontSize(sizes[idx]);
      if (configFontValue) configFontValue.textContent = currentFontSize;
      showToast(`字体: ${currentFontSize}px`, 'success', 1200);
    };

    // Fullscreen toggle
    const fullscreenBtn = document.getElementById('fullscreenBtn');
    fullscreenBtn.onclick = () => {
      if (!document.fullscreenElement) {
        document.documentElement.requestFullscreen().catch(err => {
          showToast('无法进入全屏模式', 'error');
        });
      } else {
        document.exitFullscreen();
      }
    };

    // Conversation search functionality
    let searchMatches = [];
    let currentMatchIndex = -1;
    let searchDebounceTimer;

    function openConversationSearch() {
      conversationSearch.classList.add('active');
      conversationSearchInput.focus();
      conversationSearchInput.select();
    }

    function closeConversationSearch() {
      conversationSearch.classList.remove('active');
      conversationSearchInput.value = '';
      clearSearchHighlights();
      searchMatches = [];
      currentMatchIndex = -1;
      updateSearchCount();
    }

    function clearSearchHighlights() {
      document.querySelectorAll('.conversation-search-highlight').forEach(el => {
        const parent = el.parentNode;
        parent.replaceChild(document.createTextNode(el.textContent), el);
        parent.normalize();
      });
    }

    function highlightMatches(query) {
      clearSearchHighlights();
      if (!query) return;

      const walker = document.createTreeWalker(
        messagesEl,
        NodeFilter.SHOW_TEXT,
        null,
        false
      );

      const textNodes = [];
      let node;
      while (node = walker.nextNode()) {
        if (node.parentElement.closest('.conversation-search, .msg-actions, .msg-copy-icon')) continue;
        if (node.textContent.toLowerCase().includes(query.toLowerCase())) {
          textNodes.push(node);
        }
      }

      textNodes.forEach(node => {
        const text = node.textContent;
        const regex = new RegExp(`(${escapeRegExp(query)})`, 'gi');
        const parts = text.split(regex);

        const fragment = document.createDocumentFragment();
        parts.forEach((part, i) => {
          if (regex.test(part) || (i % 2 === 1)) {
            const span = document.createElement('span');
            span.className = 'conversation-search-highlight';
            span.textContent = part;
            fragment.appendChild(span);
          } else {
            fragment.appendChild(document.createTextNode(part));
          }
        });

        node.parentNode.replaceChild(fragment, node);
      });

      searchMatches = Array.from(document.querySelectorAll('.conversation-search-highlight'));
      if (searchMatches.length > 0) {
        currentMatchIndex = 0;
        scrollToMatch(0);
      }
      updateSearchCount();
    }

    function escapeRegExp(string) {
      return string.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
    }

    function scrollToMatch(index) {
      if (searchMatches.length === 0) return;

      searchMatches.forEach((el, i) => {
        el.classList.toggle('conversation-search-current', i === index);
      });

      currentMatchIndex = index;
      const match = searchMatches[index];
      if (match) {
        match.scrollIntoView({ behavior: 'smooth', block: 'center' });
      }
      updateSearchCount();
    }

    function updateSearchCount() {
      if (searchMatches.length === 0) {
        searchCount.textContent = '0/0';
      } else {
        searchCount.textContent = `${currentMatchIndex + 1}/${searchMatches.length}`;
      }
    }

    function nextMatch() {
      if (searchMatches.length === 0) return;
      const next = (currentMatchIndex + 1) % searchMatches.length;
      scrollToMatch(next);
    }

    function prevMatch() {
      if (searchMatches.length === 0) return;
      const prev = (currentMatchIndex - 1 + searchMatches.length) % searchMatches.length;
      scrollToMatch(prev);
    }

    conversationSearchInput.addEventListener('input', () => {
      clearTimeout(searchDebounceTimer);
      searchDebounceTimer = setTimeout(() => {
        highlightMatches(conversationSearchInput.value.trim());
      }, 200);
    });

    conversationSearchInput.addEventListener('keydown', (e) => {
      if (e.key === 'Enter') {
        e.preventDefault();
        if (e.shiftKey) {
          prevMatch();
        } else {
          nextMatch();
        }
      } else if (e.key === 'Escape') {
        closeConversationSearch();
      }
    });

    searchNext.onclick = nextMatch;
    searchPrev.onclick = prevMatch;
    searchClose.onclick = closeConversationSearch;

    // File upload
    attachBtn.onclick = () => fileInput.click();
    fileInput.onchange = async () => {
      const files = Array.from(fileInput.files);
      if (!files.length) return;
      await handleFiles(files);
      fileInput.value = '';
    };

    // Welcome: 新会话 -> focus input
    document.getElementById('welcomeNewChat').onclick = () => {
      inputEl.focus();
    };

    // Welcome: 查看服务器 -> show health status (OpenCode-style "See Servers")
    document.getElementById('welcomeSeeServers').onclick = async () => {
      const btn = document.getElementById('welcomeSeeServers');
      const orig = btn.textContent;
      btn.textContent = '检查中…';
      btn.disabled = true;
      try {
        const res = await fetch('/api/health');
        const ok = res.ok;
        const text = await res.text();
        if (ok) {
          showToast('服务器状态: ' + (text || 'OK'), 'success');
        } else {
          showToast('服务器异常: ' + res.status, 'error');
        }
      } catch (e) {
        showToast('无法连接服务器: ' + (e.message || '网络错误'), 'error');
      }
      btn.textContent = orig;
      btn.disabled = false;
    };

    // Suggestion clicks
    document.querySelectorAll('.suggestion').forEach(el => {
      el.onclick = () => {
        inputEl.value = el.dataset.prompt;
        send();
      };
    });

    // Export conversation
    function exportConversation() {
      const rows = messagesEl.querySelectorAll('.msg-row');
      let markdown = '# Bee 对话导出\n\n';
      markdown += `导出时间: ${new Date().toLocaleString('zh-CN')}\n\n`;

      rows.forEach(row => {
        const role = row.dataset.role;
        const msg = row.querySelector('.msg');
        const content = msg.dataset.rawContent;
        const timestamp = msg.dataset.timestamp;
        const time = timestamp ? new Date(timestamp).toLocaleString('zh-CN') : '';

        if (role === 'user') {
          markdown += `## 👤 用户 (${time})\n\n${content}\n\n`;
        } else if (role === 'assistant') {
          markdown += `## 🐝 助手 (${time})\n\n${content}\n\n`;
        }
      });

      const blob = new Blob([markdown], { type: 'text/markdown' });
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = `bee-chat-${new Date().toISOString().slice(0, 10)}.md`;
      document.body.appendChild(a);
      a.click();
      document.body.removeChild(a);
      URL.revokeObjectURL(url);

      showToast('对话已导出', 'success');
    }

    // Import conversation
    function importConversation() {
      importFileInput.click();
    }

    async function handleImportFile(file) {
      try {
        const content = await file.text();
        const extension = file.name.split('.').pop().toLowerCase();

        let messages = [];

        if (extension === 'json') {
          // Parse JSON format
          const data = JSON.parse(content);
          if (Array.isArray(data.messages)) {
            messages = data.messages;
          } else if (Array.isArray(data)) {
            messages = data;
          } else {
            throw new Error('无效的 JSON 格式');
          }
        } else {
          // Parse Markdown format (default export format)
          messages = parseMarkdownConversation(content);
        }

        if (messages.length === 0) {
          showToast('未找到有效的对话内容', 'warning');
          return;
        }

        // Create new session with imported messages
        const importedTitle = file.name.replace(/\.[^/.]+$/, '');
        await createSessionWithMessages(importedTitle, messages);

        showToast(`成功导入 ${messages.length} 条消息`, 'success');
      } catch (err) {
        console.error('Import error:', err);
        showToast('导入失败: ' + (err.message || '文件格式错误'), 'error');
      }
    }

    function parseMarkdownConversation(markdown) {
      const messages = [];
      const lines = markdown.split('\n');
      let currentRole = null;
      let currentContent = [];
      let currentTimestamp = null;

      const saveCurrentMessage = () => {
        if (currentRole && currentContent.length > 0) {
          messages.push({
            role: currentRole,
            content: currentContent.join('\n').trim(),
            timestamp: currentTimestamp || new Date().toISOString()
          });
        }
        currentContent = [];
      };

      for (const line of lines) {
        // Check for user message header
        const userMatch = line.match(/^## 👤 用户 \(([^)]+)\)/);
        if (userMatch) {
          saveCurrentMessage();
          currentRole = 'user';
          currentTimestamp = new Date(userMatch[1]).toISOString();
          continue;
        }

        // Check for assistant message header
        const assistantMatch = line.match(/^## 🐝 助手 \(([^)]+)\)/);
        if (assistantMatch) {
          saveCurrentMessage();
          currentRole = 'assistant';
          currentTimestamp = new Date(assistantMatch[1]).toISOString();
          continue;
        }

        // Skip export header lines
        if (line.startsWith('# ') || line.startsWith('导出时间:')) {
          continue;
        }

        // Skip empty lines between messages
        if (!currentRole && line.trim() === '') {
          continue;
        }

        // Accumulate content
        if (currentRole) {
          currentContent.push(line);
        }
      }

      // Save last message
      saveCurrentMessage();

      return messages;
    }

    async function createSessionWithMessages(title, messages) {
      try {
        // Create new session
        const res = await fetch('/api/chat/stream', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ message: messages[0]?.content || '导入的对话', session_id: undefined, assistant_id: currentAssistantId })
        });

        if (!res.ok) throw new Error('创建会话失败');

        // Parse stream to get session ID
        const reader = res.body.getReader();
        const decoder = new TextDecoder();
        let buffer = '';
        let newSessionId = null;

        while (true) {
          const { value, done } = await reader.read();
          if (done) break;
          buffer += decoder.decode(value, { stream: true });
          const lines = buffer.split('\n');
          buffer = lines.pop() || '';

          for (const line of lines) {
            if (!line.trim()) continue;
            try {
              const ev = JSON.parse(line);
              if (ev.type === 'session_id') {
                newSessionId = ev.session_id;
                break;
              }
            } catch (e) {}
          }
          if (newSessionId) break;
        }

        if (!newSessionId) throw new Error('无法获取会话 ID');

        // Clear the initial message and add imported messages
        await fetch('/api/session/clear', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ session_id: newSessionId })
        });

        // Add all imported messages
        for (const msg of messages) {
          await fetch('/api/message', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              session_id: newSessionId,
              role: msg.role,
              content: msg.content,
              timestamp: msg.timestamp
            })
          });
        }

        // Switch to new session
        sessionId = newSessionId;
        localStorage.setItem(STORAGE_KEY, newSessionId);
        await loadHistory();
        loadSessionList();

      } catch (err) {
        throw new Error('创建会话失败: ' + err.message);
      }
    }

    // Bookmark functionality
    const BOOKMARKS_KEY = 'bee_bookmarks';

    function getBookmarks() {
      try {
        return JSON.parse(localStorage.getItem(BOOKMARKS_KEY)) || [];
      } catch {
        return [];
      }
    }

    function saveBookmarks(bookmarks) {
      localStorage.setItem(BOOKMARKS_KEY, JSON.stringify(bookmarks));
    }

    function toggleBookmark(msgRow, timestamp, content) {
      const bookmarks = getBookmarks();
      const existingIndex = bookmarks.findIndex(b => b.timestamp === timestamp);

      if (existingIndex >= 0) {
        // Remove bookmark
        bookmarks.splice(existingIndex, 1);
        saveBookmarks(bookmarks);
        msgRow.classList.remove('bookmarked');
        showToast('已取消收藏', 'success');
      } else {
        // Add bookmark
        const bookmark = {
          timestamp: timestamp,
          content: content.slice(0, 200) + (content.length > 200 ? '...' : ''),
          fullContent: content,
          sessionId: sessionId,
          createdAt: new Date().toISOString()
        };
        bookmarks.push(bookmark);
        saveBookmarks(bookmarks);
        msgRow.classList.add('bookmarked');
        showToast('已添加到收藏', 'success');
      }
    }

    function applyBookmarkStyles() {
      const bookmarks = getBookmarks();
      document.querySelectorAll('.msg-row').forEach(row => {
        const msg = row.querySelector('.msg');
        if (msg) {
          const timestamp = msg.dataset.timestamp;
          if (bookmarks.some(b => b.timestamp === timestamp)) {
            row.classList.add('bookmarked');
          }
        }
      });
    }

    // Add keyboard shortcut for bookmarks (Ctrl/Cmd + B)
    document.addEventListener('keydown', (e) => {
      if ((e.ctrlKey || e.metaKey) && e.key === 'b' && !e.target.matches('input, textarea')) {
        e.preventDefault();
        openBookmarksModal();
      }
    });

    function openBookmarksModal() {
      const bookmarks = getBookmarks();
      const modal = document.createElement('div');
      modal.className = 'bookmarks-modal';
      modal.innerHTML = `
        <div class="bookmarks-content">
          <div class="bookmarks-header">
            <span class="bookmarks-title">🔖 收藏的消息</span>
            <button class="bookmarks-close">✕</button>
          </div>
          <div class="bookmarks-list">
            ${bookmarks.length === 0 ? '<div class="bookmarks-empty">暂无收藏消息<br><small>点击消息上的「收藏」按钮添加</small></div>' : ''}
            ${bookmarks.map((b, i) => `
              <div class="bookmark-item" data-index="${i}">
                <div class="bookmark-content">${escapeHtml(b.content)}</div>
                <div class="bookmark-meta">
                  <span>${new Date(b.createdAt).toLocaleString('zh-CN')}</span>
                  <button class="bookmark-delete" data-index="${i}">删除</button>
                </div>
              </div>
            `).join('')}
          </div>
        </div>
      `;

      modal.querySelector('.bookmarks-close').onclick = () => modal.remove();
      modal.onclick = (e) => {
        if (e.target === modal) modal.remove();
      };

      modal.querySelectorAll('.bookmark-delete').forEach(btn => {
        btn.onclick = (e) => {
          e.stopPropagation();
          const index = parseInt(btn.dataset.index);
          bookmarks.splice(index, 1);
          saveBookmarks(bookmarks);
          modal.remove();
          openBookmarksModal();
          applyBookmarkStyles();
        };
      });

      document.body.appendChild(modal);
    }

    // Init
    startConnectionMonitoring();
    loadAssistants();
    loadModels();
    loadSessionList();
    if (sessionId) loadHistory();
    inputEl.focus();
  </script>
</body>
</html>
